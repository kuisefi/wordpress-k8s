# wordpress-k8s/.env

# Kubernetes Namespace
NAMESPACE=wordpress_dev

# MariaDB Credentials
MARIADB_ROOT_PASSWORD=wordpress_dev
MARIADB_DATABASE=wordpress_dev
MARIADB_USER=wordpress_dev
MARIADB_PASSWORD=wordpress_dev

# WordPress Release Version (optional, for tracking deployments)
WORDPRESS_RELEASE=6.8.1

# Ingress Host
INGRESS_HOST=wordpress.localhost

# Docker Image Versions
MARIADB_IMAGE=mariadb:10.11
WORDPRESS_IMAGE=wordpress:6.8.1-php8.2-fpm
NGINX_IMAGE=nginx:1.24